@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Playwrite+MX+Guides&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../main.css">
</head>
<body>
    <nav class="Form">
        <p>Registration Form</p>
    </nav>
    <hr>

    <main class="FormCard">
        <form asp-action="Form" method="post">
            <div>
                <span asp-validation-for="Name" class="error-Name" ></span>
                <label for="Name"></label>
                <input asp-for="Name" type="text" placeholder="Name" >
            </div>

            <div>
                <span asp-validation-for="Surname" class="error-Surname"></span>
                <label for="Surname"></label>
                <input asp-for="Surname" type="text" placeholder="Surname">
            </div>

            <div>
                <span asp-validation-for="Email" class="error-Email"></span>
                <label for="Email"></label>
                <input asp-for="Email" type="email" placeholder="Email">
            </div>

            <ul>
                <li>
                    <p>I will</p>
                </li>
                <li>
                    <label>
                        <input asp-for="Particibate" type="radio" value="true"> Participate
                    </label>
                </li>
                <li>
                    <label>
                        <input asp-for="Particibate" type="radio" value="false"> Not Participate
                    </label>
                </li>
            </ul>
            <span asp-validation-for="Particibate" style="color:red;"></span>

            <button type="submit">Submit</button>
        </form>
    </main>
</body>
</html>